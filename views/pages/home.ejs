<link rel="stylesheet" href="css/style.css">
<link rel="stylesheet" href="css/home.css">
<div class="wrapper">
    <div class="sidebar">
   
   
        <%- include('../layouts/sidebar', {PageName: 'home'}) %>
        
    </div>
    <div class="main_content">
        <div class="questionnaire">
            <div class="heading">
                <h1>What would you like to order?</h1>
            </div>
            <div class="menu-items">
                <select name="options" id="options">
                    <% kitchen.forEach(cuisine => { %>
                        <option value=<%= cuisine %> ><%= cuisine %></option>
                    <% }) %>
                  </select>
            </div>
      
            <div class="meals">
            <div class="meal">
               <div class="title"> 
                <h3>name</h3>
                <h3>price</h3>
               </div>
                <div class="description">
                 <p>description</p>
                 </div>
                 <img src="https://payments.ipaygh.com/app/webroot/img/products/MER02854-Double_Decker-0.jpeg" alt="">
            </div>
        </div>
                <%- meals %>
        </div>
    </div>
    <div class="right">
        <div class="header">
            <h1>Your Order</h1>
        </div>
        <div class="item-list">
            <hr>
            <div class="heading">
                <h3 class="first">Item</h3>
                <h3>Qty</h3>
                <h3>Price</h3>
            </div>
            <hr>
            <div class="item">
                <h3 class="first">Steaks on a Plan</h3>
                <h3>1</h3>
                <h3>10.45</h3>
            </div>
            <div class="item">
                <h3 class="first">Roastbusters</h3>
                <h3>1</h3>
                <h3>11.45</h3>
            </div>
            <hr>
            <div class="total">
                <h3>Total</h3>
                <h3 class="price">21.90</h3>
            </div>
            <hr>
            <div class="confirm">
                <button class="cancel">Cancel</button>
                <button class="confirmed">Order</button>
            </div>
        </div>
    </div>
</div>
<div>
</div>

<script src="js/home.js"></script>